{
  "name": "conways-game-of-life",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "vite",
    "dev:server": "nodemon --exec \"node --loader ts-node/esm\" server/index.ts",
    "build": "vite build",
    "build:server": "tsc --project tsconfig.server.json --noEmitOnError false",
    "build:release": "vite build --config vite.config.client.ts",
    "preview": "vite preview",
    "preview:release": "vite preview --config vite.config.client.ts",
    "start": "npm run build:server && node dist/server/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "lucide": "^0.460.0",
    "playwright": "^1.59.0-alpha-2026-02-05",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "vibe-kanban-web-companion": "^0.0.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.59.0-alpha-2026-02-05",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^24.3.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@vitest/coverage-v8": "^4.0.18",
    "concurrently": "^8.2.2",
    "happy-dom": "^20.4.0",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vite": "^6.4.1",
    "vitest": "^4.0.18"
  },
  "overrides": {
    "minimatch": ">=10.2.1"
  }
}
